@{ ViewBag.Title = "Dashboard"; }

<div class="container-fluid mt-4">
    <header class="mb-4">
        <h4><b><i class="fa fa-dashboard"></i> Facility Dashboard</b></h4>
    </header>

    <div class="row">
        <!-- Doughnut Chart -->
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5>Chart</h5>
                    <canvas id="doughnutChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Patients Count -->
        <div class="col-md-3">
            <div class="card bg-warning text-white shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <i class="fa fa-users fa-3x"></i>
                    <div>
                        <h3 id="patientCount">0</h3>
                        <p>Patients</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-4 shadow-sm">
        <div class="card-body">
            <h5>Feeds (For the day)</h5>
            <table class="table table-striped">
                <tr>
                    <td><i class="fa fa-users text-warning"></i></td>
                    <td>Number of patients logged</td>
                    <td><i id="loggedPatients">0</i></td>
                </tr>
                <tr>
                    <td><i class="fa fa-user text-primary"></i></td>
                    <td>Number of Health Records</td>
                    <td><i id="healthRecords">0</i></td>
                </tr>
                <tr>
                    <td><i class="fa fa-bell text-danger"></i></td>
                    <td>Number of Cases</td>
                    <td><i id="casesCount">0</i></td>
                </tr>
            </table>
        </div>
    </div>

    <div class="card mt-4 shadow-sm">
        <div class="card-body">
            <h5>General Stats</h5>
            <p>New Patients Logged</p>
            <div class="progress">
                <div class="progress-bar bg-success" id="newPatients" style="width:25%">+25%</div>
            </div>

            <p class="mt-3">Old Patients Visit</p>
            <div class="progress">
                <div class="progress-bar bg-warning" id="oldPatients" style="width:50%">50%</div>
            </div>

            <p class="mt-3">Total Patients</p>
            <div class="progress">
                <div class="progress-bar bg-danger" id="totalPatients" style="width:75%">75%</div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Example chart data
    var ctx = document.getElementById('doughnutChart').getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: ['Doctors', 'Nurses'],
            datasets: [{
                data: [10, 15], // Replace with dynamic data
                backgroundColor: ['#007bff', '#ffc107']
            }]
        }
    });

    // Example data population
    document.getElementById("patientCount").innerText = "150"; // Replace dynamically
    document.getElementById("loggedPatients").innerText = "17";
    document.getElementById("healthRecords").innerText = "10";
    document.getElementById("casesCount").innerText = "15";
</script>
