@model PATIENT_PORTAL.Models.Patient

@{
    ViewBag.Title = "Patient Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Patient Details</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 text-center">
                    @if (!string.IsNullOrEmpty(Model.ProfileImage))
                    {
                        <img src="@Model.ProfileImage" class="img-fluid rounded-circle border border-secondary shadow-sm" alt="Profile Image" width="150" height="150">
                    }
                    else
                    {
                        <img src="https://via.placeholder.com/150" class="img-fluid rounded-circle border border-secondary shadow-sm" alt="Default Profile Image">
                    }
                    <h5 class="mt-3">@Model.FirstName @Model.LastName</h5>
                    <p class="text-muted">@Model.Sex | @Model.CivilStatus</p>
                </div>

                <div class="col-md-8">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th class="bg-light">Health Record ID</th>
                                <td>@Html.DisplayFor(model => model.PATIENT_HealthRecord.Id)</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Blood Type</th>
                                <td>@Html.DisplayFor(model => model.BloodType)</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Birth Date</th>
                                <td>@Html.DisplayFor(model => model.BirthDate)</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Place of Birth</th>
                                <td>@Html.DisplayFor(model => model.PlaceOfBirth)</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Nationality</th>
                                <td>@Html.DisplayFor(model => model.Nationality)</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Contact Number</th>
                                <td>@Html.DisplayFor(model => model.ContactNumber)</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Address</th>
                                <td>
                                    @Html.DisplayFor(model => model.StreetAddress),
                                    @Html.DisplayFor(model => model.City),
                                    @Html.DisplayFor(model => model.Province),
                                    @Html.DisplayFor(model => model.Region),
                                    @Html.DisplayFor(model => model.Country),
                                    @Html.DisplayFor(model => model.ZipCode)
                                </td>
                            </tr>
                            <tr>
                                <th class="bg-light">Active Status</th>
                                <td>
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="card-footer">
            <a href="@Url.Action("Index", "Patients")" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
            <a href="@Url.Action("Edit", "Patients", new { id = Model.Id })" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a href="@Url.Action("Create", "PATIENT_HealthRecord")" class="btn btn-success"> Add Health Records </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
